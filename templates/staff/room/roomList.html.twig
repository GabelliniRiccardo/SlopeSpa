{% extends 'staff/baseStaff.html.twig' %}

{% block main %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-xl-4">
                    <h6 class="m-0 font-weight-bold text-primary">{% trans %}RoomList.ListOfRooms{% endtrans %}</h6>
                </div>
                <div class="col-xl-4 count">
                    {% trans %}RoomList.TotalNumOfElements{% endtrans %}: {{ pagination.getTotalItemCount }}
                </div>
                <div class="col-xl-4 text-xl-right">
                    <a href="{{ path('staff_create_room') }}" class="text-decoration-none">
                        <h6 class="m-0 font-weight-bold text-primary">{% trans %}RoomList.AddRoom{% endtrans %}
                            <i class="fas fa-plus-circle"></i>
                        </h6>
                    </a>

                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12">
                    <table class="table table-responsive-lg">
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>{{ knp_pagination_sortable(pagination, 'RoomList.Id'|trans, 'r.id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'RoomList.Name'|trans, 'r.name') }}</th>
                            <th class="text-center">{% trans %}RoomList.Manage{% endtrans %}</th>
                        </tr>

                        {# table body #}
                        {% for room in pagination %}
                            <tr>
                                <td>{{ room.id }}</td>
                                <td>{{ room.name }}</td>
                                <td>
                                    <div class="row btn-toolbar justify-content-center">
                                        <div class="col-2 btn-group mr-3">
                                            <!-- Button trigger modal -->
                                            <button type="button"
                                                    class="btn btn-danger deleteButton"
                                                    id="{{ room.id }}"
                                                    data-toggle="modal"
                                                    data-target="#exampleModal"
                                                    title="{% trans %}RoomList.Delete{% endtrans %} {{ room.name }}">
                                                <i class="fa fa-trash-alt" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <div class="col-2 btn-group ml-3">
                                            <a href="{{ path('staff_edit_room', {'room' : room.id}) }}"
                                               class="btn btn-warning"
                                               title="{% trans %}RoomList.Edit{% endtrans %} {{ room.name }}">
                                                <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        <!-- Modal -->
                        {% include 'modal/LoadingModal.html.twig' %}

                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination, null, {}, {
                            'align': 'center',
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block customJavascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/delete-Room.js') }}"></script>
{% endblock %}
