{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

    {% block customStylesheets %}
       {{ parent() }}
        <link href="{{ asset('/build/css/particles.css') }}" rel="stylesheet">
    {% endblock %}

{% block main %}
    <header class="masthead text-center text-white">
        <div class="masthead-content">
            <div class="container">
                <div id="particles-js"></div>
                <div class="text">
                    <h1 class="masthead-heading mb-0">{% trans %}HomePage.WelcomeMessage{% endtrans %}</h1>
                    <h4 class="mb-0">{% trans %}HomePage.Enjoy{% endtrans %}</h4>
                </div>
            </div>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <img class="img-fluid" src="{{ asset('build/images/Calendar.png') }}" alt="">
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">{% trans %}HomePage.ManageYourCalendar{% endtrans %}</h2>
                        <p>{% trans %}HomePage.CalendarDescription{% endtrans %}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="p-5">
                        <img class="img-fluid" src="{{ asset('build/images/Statistics.png') }}" alt="">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <h2 class="display-4">{% trans %}HomePage.ViewStatistics{% endtrans %}</h2>
                        <p>{% trans %}HomePage.StatisticsDescription{% endtrans %}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                        <img class="img-fluid" src="{{ asset('build/images/Reservations.png') }}" alt="">
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                        <h2 class="display-4">{% trans %}HomePage.ManageYourReservations{% endtrans %}</h2>
                        <p>{% trans %}HomePage.ReservationsDescription{% endtrans %}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block customJavascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/loadParticles.js') }}"></script>
{% endblock %}
