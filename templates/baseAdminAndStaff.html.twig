<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>

    {% block customStylesheets %}
        <!-- Custom styles for this template-->
        <link href="{{ asset('build/css/sb-admin-2.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    {% block sidebar %}
    {% endblock %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            {% block topBar %}
            {% endblock %}

            <!-- Begin Page Content -->
            <div class="container-fluid">
                {% block main %}
                {% endblock %}
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        {% block footer %}
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        {% endblock %}
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{% trans %}LogoutModal.Title{% endtrans %}</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">{% trans %}LogoutModal.Sure{% endtrans %}</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button"
                        data-dismiss="modal">{% trans %}LogoutModal.Cancel{% endtrans %}</button>
                <a class="btn btn-primary"
                   href="{{ path('app_logout') }}">{% trans %}LogoutModal.Logout{% endtrans %}</a>
            </div>
        </div>
    </div>
</div>

{% block customJavascripts %}
    <!-- Custom scripts for all pages-->
    <script src="{{ asset('build/js/sb-admin-2.js') }}"></script>
{% endblock %}

</body>
</html>
