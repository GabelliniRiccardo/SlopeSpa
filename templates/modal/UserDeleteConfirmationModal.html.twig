<div class="modal-content" id="loadModalContent">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{% trans %}DeleteModal.User{% endtrans %} {{ user.name }}</h5>
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        {% trans %}DeleteModal.AreYouSureToDelete{% endtrans %} {{ user.name }} {{ user.lastName }}?
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <button type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal">
                {% trans %}DeleteModal.Close{% endtrans %}
            </button>
        </div>
        {{ form(deleteUserForm) }}
        {{ form_end(deleteUserForm) }}
    </div>
</div>
