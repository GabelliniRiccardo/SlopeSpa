{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block main %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col col-lg-4">
                    <h6 class="m-0 font-weight-bold text-primary">Staff for SPA: {{ spa.name }}</h6>
                </div>
                <div class="col count">
                    Total number of elements: {{ pagination.getTotalItemCount }}
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12">
                    <table class="table table-responsive-lg">
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>{{ knp_pagination_sortable(pagination, 'Id', 'u.id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Name', 'u.name') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Last Name', 'u.lastName') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Email', 'u.email') }}</th>
                            <th>Manage</th>
                        </tr>

                        {# table body #}
                        {% for user in pagination %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    <div class="row">
                                        <div class="col-sm-6 mb-0 mb-sm-1">
                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-danger deleteButton" id="{{ user.id }}"
                                                    data-toggle="modal" data-target="#exampleModal">
                                                <i class="fa fa-trash-alt" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <div class="col-sm-6 mb-0 mb-sm-1">
                                            <a href="{{ path('admin_edit_staff', {'user' : user.id}) }}"
                                               class="btn btn-warning">
                                                <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        <!-- Modal -->
                        {% include 'modal/LoadingModal.html.twig' %}

                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block customJavascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/delete-User.js') }}"></script>
{% endblock %}


