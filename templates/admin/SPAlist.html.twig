{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block main %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col col-lg-2">
                    <h6 class="m-0 font-weight-bold text-primary">Create SPA</h6>
                </div>
                <div class="col count">
                    Total number of elements: {{ pagination.getTotalItemCount }}
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12">
                    <table class="table table-responsive-lg">
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>{{ knp_pagination_sortable(pagination, 'Id', 's.id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Name', 's.name') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Email', 's.email') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Address', 's.address') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Phone Number', 's.phoneNumber') }}</th>
                            <th>Manage</th>
                        </tr>

                        {# table body #}
                        {% for spa in pagination %}
                            <tr>
                                <td>
                                    <a href="{{ path('admin_spa_info', {'spa' : spa.id}) }}"
                                       title="watch {{ spa.name }}">{{ spa.id }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_spa_info', {'spa' : spa.id}) }}"
                                       title="watch {{ spa.name }}">{{ spa.name }}
                                    </a>
                                </td>
                                <td>{{ spa.email }}</td>
                                <td>{{ spa.address }}</td>
                                <td>{{ spa.phoneNumber }}</td>
                                <td>
                                    <div class="row">
                                        <div class="col-lg-3 mb-md-1 mb-0 text-center">
                                            <form action="{{ path('admin_delete_SPA', {'spa' : spa.id}) }}"
                                                  method="POST"
                                                  class="delete-button-form">
                                                <input name="_method" value="DELETE" type="hidden">
                                                <button type="submit"
                                                        class="btn btn-danger"
                                                        title="Delete {{ spa.name }}">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-lg-3 mb-md-1 mb-0 text-center">
                                            <a href="{{ path('admin_edit_SPA', {'spa' : spa.id}) }}"
                                               class="btn btn-warning"
                                               title="Edit {{ spa.name }}">
                                                <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="col-lg-3 mb-md-1 mb-0 text-center">
                                            <a href="{{ path('admin_add_staff', {'spa' : spa.id}) }}"
                                               class="btn btn-primary"
                                               title="Add staff to {{ spa.name }}">
                                                <i class="fa fa-plus" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="col-lg-3 mb-md-1 mb-0 text-center">
                                            <a href="{{ path('admin_spa_info', {'spa' : spa.id}) }}"
                                               class="btn btn-success"
                                               title="watch {{ spa.name }}">
                                                <i class="fa fa-search" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


